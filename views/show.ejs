<html>
<%- include('./partials/head.ejs')%>

    <body class="#ede7f6 deep-purple lighten-5">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <h1 class="h1-show">
            <%=products.name%>
        </h1><br />
        <div class="row">
            <div class="col s6 push-s3">
                <img src="<%=products.img%>"><br />
                <span class="bolded">Description:</span>
                <%=products.description%><br />
                    <span class="bolded">Price:</span>
                    <%=products.price%><br />
                        <span class="bolded">Qty:</span>
                        <%=products.qty%><br />
                            <!-- if products are 0 show out of stock -->
                            <% if (products.qty <=0) { %>
                                <h4>Out of Stock</h4>
                                <!-- else show number and if buy button is clicks show one less -->
                                <% } %>
                                    <% if (products.qty> 0) {%>
                                        <div>
                                            <form class="buy-button"
                                                action="/products/buy/<%=products._id%>?_method=PUT" method="post">
                                                <input class="waves-effect amber waves-light btn" type="submit"
                                                    value="Buy This Now">
                                            </form>
                                        </div>
                                        <% } %>

            </div>

        </div>
        <footer>
            <%- include('./partials/footer.ejs')%>
                <div class="foot">
                    <!-- love the materialize here! -->
                    <a class="waves-effect amber waves-light btn" href="/products/<%= products._id %>/edit"><span
                            class="purple-text darken-3">EDIT</span></a>
                    <form class="delete" action="/products/<%=products._id%>?_method=DELETE" method="post">
                        <!-- love the materialize here! -->
                        <input class="waves-effect amber waves-light btn" type="submit" value="DELETE" />
                    </form>
                </div>
        </footer>

    </body>

</html>